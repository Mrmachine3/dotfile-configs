#while [ $date1 = "00:00:00" ]; do
#    echo "Break Time!"

# Break Time Pomodoro timer
seconds=$(($((60*$N))/3)); date2=$((`date +%s` + $seconds)); 
while [ "$date2" -ge `date +%s` ]; do 
  echo -ne "$(date -u --date @$(($date2 - `date +%s` )) +%H:%M:%S)\r"; 
done

while [ $date2 = "00:00:00" ]; do
    echo "Pomodoro complete!"
