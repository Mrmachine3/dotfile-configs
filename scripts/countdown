#!/bin/bash
n=$1

# Work Time Pomodoro timer
#seconds=$(( 60 * $N); date1=$((`date +%s` + $seconds)); 
#while [ "$date1" -ge `date +%s` ]; do 
#  echo -ne "$(date -u --date @$(($date1 - `date +%s` )) +%H:%M:%S)\r"; 
#done
