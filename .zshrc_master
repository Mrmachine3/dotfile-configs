# SET PERSONAL ALIASES
# zshrc configuration aliases
 alias zshrc='${=EDITOR} ~/.zshrc'
 alias ohmyzsh='${=EDITOR} ~/.oh-my-zsh'
 alias .zsh='source ~/.zshrc'

# Fun aliases
 alias cowsay='/usr/games/fortune | /usr/games/cowsay -n'

# Filesystem aliases
 alias all='ls -arlFh'
 alias ls.='ls -ld .*'
 alias home='cd'
 alias desk='cd ~/Desktop'
 alias ..='cd ..; ls -al'
 alias cd..='cd ..; ls -al'
 alias ...='cd ..; cd ..; ls -al'
 alias ls='ls -alh'
 alias h='history'
 alias hs='history|grep -i'
 alias c='clear'
 alias now='date +"%T"'

# File management aliases
 alias rmdir='sudo rm -rv '

# confirmation aliases
 alias mv='mv -i'
 alias cp='cp -i'
 alias rm='rm -i'

#Command line head/tail shortcuts
 alias -g H='| head'
 alias -g T='| tail'
 alias -g G='| grep'
 
# Git aliases
 alias gstat='git status'
 alias gadd='git add'
 alias gull='git pull'
 alias gcom='git commit -m'
 alias gush='git push'

# Python venv aliases
 alias pyfind='find . -name "*.py"'
 alias deact='deactivate'
 alias act27='source vpy27/bin/activate'
 alias act36='source vpy36/bin/activate'

# Web-search aliases
 alias google='web_search google'
 alias gmail='web_search google gmail'
 alias youtube='web_search google youtube'
 alias github='web_search github'

# Directory cloning aliases
 alias clone='rclone sync /home/mrmachine/Desktop/dpucybersec remote:dpu_cybersec'
 alias seeclone='echo "rclone sync /home/mrmachine/Desktop/dpu_masters remote:dpu_cybersec"'

# OMZ plugin aliases
 alias tmux='tmux -2'
 alias ta='tmux attach -t'
 alias tad='tmux attach -d -t'
 alias ts='tmux new-session -s'
 alias tl='tmux list-sessions'
 alias tksv='tmux kill-server'
 alias tkss='tmux kill-session -t'

# Markdown conversion and PDF maker aliases
# alias makepdf='pandoc $2 -t beamer -o $3'			# Debug this alias
# alias viewpdf='mupdf $2'							# Debug this alias

getthingsdone() {
MSGS="CAPTURE: Collect what has your attention
CLARIFY: Process what it means
ORGANIZE: Put it where it belongs
REFLECT: Review frequently
ENGAGE: Just do it!"

# Print array
printf '%*s\n' "${COLUMNS:-$(tput cols)}" '' | tr ' ' -
echo "Get Things Done Mindset" 
echo " " && printf '%s\n' "$MSGS" | fold -s && echo " "
printf '%*s\n' "${COLUMNS:-$(tput cols)}" '' | tr ' ' -
}

# Custom function aliases moved to bin folder
 alias gtd='getthingsdone'
 alias dim='echo "window size: $(tput cols)x$(tput lines)"'

